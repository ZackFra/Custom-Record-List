<?xml version="1.0" encoding="UTF-8" ?>
<Package xmlns="http://soap.sforce.com/2006/04/metadata">
    <!-- 
        This custom application, and these tabs, are build on top of the customRecordList components.
        They provide a nice demo of how it works :)
    -->
    <types>
        <members>userRecordList</members>
        <members>groupRecordList</members>
        <name>LightningComponentBundle</name>
    </types>

    <types>
        <name>CustomApplication</name>
        <members>Salesforce_Administration</members>
    </types>

    <!-- As I understand it, access to lightning component tabs is granted via profiles, not permission sets,
        so access needs to be granted to the profiles that will be using the app.
     -->
    <types>
        <name>CustomTab</name>
        <members>Public_Groups_Queues</members>
        <members>Users</members>
    </types>
    <types>
        <name>PermissionSet</name>
        <members>Custom_App_Salesforce_Administration</members>
    </types>
    <version>60.0</version>
</Package>
